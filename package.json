{
  "name": "@acrolinx/typescript-sdk",
  "version": "0.0.11",
  "type": "module",
  "main": "./dist/acrolinx-typescript-sdk.umd.js",
  "module": "./dist/acrolinx-typescript-sdk.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/acrolinx-typescript-sdk.js",
      "require": "./dist/acrolinx-typescript-sdk.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest -c vitest.unit.config.ts",
    "test:integration": "vitest -c vitest.integration.config.ts",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.19",
    "@vitest/coverage-v8": "^3.1.4",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "msw": "^2.8.4",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  }
}
